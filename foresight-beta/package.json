{
  "name": "foresight",
  "version": "1.0.0",
  "description": "Foresight - Multi-window phone mirroring and SAR detection application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "gen:ico": "node scripts/gen-ico.js"
  },
  "keywords": [
    "electron",
    "scrcpy",
    "phone-mirror",
    "yolo",
    "sar-detection"
  ],
  "author": "Foresight Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "sql.js": "^1.10.0"
  },
  "build": {
    "appId": "com.foresight.app",
    "productName": "Foresight",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
